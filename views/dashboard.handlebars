<h2 class="text-center mb-4">Your Blog Posts</h2>
{{!-- render each post --}}
  {{#each posts as |post|}}
    <div class="card">

      <div class="card-header">
        <h4><a class="post-title" href="/dashboard/edit/{{id}}">{{title}}</a></h4>
        <p class="user-info">Posted by {{user.username}} on {{format_date date_created}}</p>
      </div>

      <p class="card-body">{{post_content}}</p>
  </div>

  {{/each}}


<a class="new-post-link" href="/dashboard/newPost">+ New Post</a>

